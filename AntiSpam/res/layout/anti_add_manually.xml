            android:textColor="@color/anti_color_dark_grey" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="@dimen/anti_margin_13dip" 
            android:layout_marginTop="@dimen/anti_margin_22dip" 
            android:text="@string/anti_input_msg" />

