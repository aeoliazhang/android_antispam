<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/antiSpamLayout">
    <LinearLayout
        android:id="@+id/LinearLayout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@color/title_bg" >

        <ImageView
            android:id="@+id/titleicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:contentDescription="@string/txt_title_spam"
            android:layout_marginLeft="@dimen/title_margin_left_13dip"
            android:src="@drawable/title" 
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="fill_vertical"
            android:text="@string/txt_title_spam" 
            android:textSize="@dimen/anti_textsize_18sp"
            android:textColor="@color/anti_color_black"/>
    </LinearLayout>
    <ScrollView android:id="@+id/ScrollView01"
 		android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	    <LinearLayout android:orientation="vertical" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" >
	        <View android:background="@color/anti_color_list_divider" 
	        android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_divider_height" />
	        <include android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_margin_52dip" 
	        layout="@layout/antispam_home_item1" />
	        <View android:background="@color/anti_color_list_divider" 
	        android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_divider_height" />
	        <include android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_margin_52dip" 
	        layout="@layout/antispam_home_item2" />
	        <View android:background="@color/anti_color_list_divider" 
	        android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_divider_height" />
	        <include android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_margin_52dip" 
	        layout="@layout/antispam_home_item3" />
	        <View android:background="@color/anti_color_list_divider" 
	        android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_divider_height" />
	        <include android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_margin_52dip" 
	        layout="@layout/antispam_home_item4" />
	        <View android:background="@color/anti_color_list_divider" 
	        android:layout_width="fill_parent" 
	        android:layout_height="@dimen/anti_divider_height" />
	    </LinearLayout>
	</ScrollView>
</LinearLayout>