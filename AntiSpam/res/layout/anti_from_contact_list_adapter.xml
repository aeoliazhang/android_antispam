<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/contact_adapter_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_selector" 
    android:clickable="true"
    android:focusable="true" 
  	xmlns:android="http://schemas.android.com/apk/res/android">
  	<ImageView android:id="@+id/image_contact_photo" 
    	android:layout_width="@dimen/anti_margin_50dip" 
    	android:layout_height="@dimen/anti_margin_50dip" 
    	android:layout_marginLeft="@dimen/anti_margin_9dip" 
    	android:layout_alignParentLeft="true" 
    	android:layout_centerVertical="true" 
    	android:contentDescription="@null"/>
    <CheckBox android:id="@+id/checked_add" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_marginRight="@dimen/anti_margin_10dip" 
    	android:layout_alignParentRight="true" 
    	android:layout_centerVertical="true" 
    	android:button="@drawable/checkbox_checked_style"/>
    <LinearLayout android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="@dimen/anti_margin_12dip" 
        android:layout_toRightOf="@id/image_contact_photo" 
        android:layout_toLeftOf = "@id/checked_add" 
        android:layout_centerVertical="true">
        <RelativeLayout android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <TextView android:id="@+id/text_contact_name"
                android:textSize="@dimen/anti_textsize_18sp" 
                android:textColor="@color/anti_color_dark_grey" 
                android:ellipsize="marquee" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="@dimen/anti_margin_50dip" 
                android:singleLine="true" 
                android:layout_alignParentLeft="true" 
                android:layout_centerVertical="true" 
                android:marqueeRepeatLimit="0" 
                android:text="zhoudq"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <TextView android:id="@+id/text_contact_number" 
                android:textSize="@dimen/anti_textsize_12sp" 
                android:textColor="@color/anti_color_light_grey3" 
                android:ellipsize="marquee" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="@dimen/anti_margin_11dip" 
                android:singleLine="true" 
                android:layout_toLeftOf="@id/checked_add" 
                android:layout_alignParentLeft="true" 
                android:layout_centerVertical="true" 
                android:marqueeRepeatLimit="0" 
                android:text="33333"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
