<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@color/anti_color_white"
    android:clickable="false"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/image_delete" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:padding="@dimen/anti_margin_15dip"
	    android:layout_centerVertical="true"
	   	android:layout_marginRight="@dimen/anti_margin_13dip" 
	    android:scaleType="center"
	    android:src="@drawable/icon_delete"
	    android:layout_alignParentRight="true" 
	    android:contentDescription="@null"/>
    <TextView android:textSize="@dimen/anti_textsize_18sp"
	    android:textColor="@color/anti_color_dark_grey" 
	    android:ellipsize="marquee" 
	    android:gravity="center_vertical" 
	    android:id="@+id/text_number" 
	    android:layout_width="wrap_content" 
	    android:layout_height="@dimen/anti_margin_52dip" 
	    android:layout_marginLeft="@dimen/anti_margin_13dip" 
	    android:layout_marginRight="@dimen/anti_margin_13dip" 
	    android:singleLine="true" 
	    android:layout_toLeftOf="@id/image_delete" 
	    android:layout_alignParentLeft="true" 
	    android:layout_centerVertical="true" 
	    android:marqueeRepeatLimit="0" />
</RelativeLayout>