<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_settings" 
    android:background="@drawable/list_selector" 
    android:padding="@dimen/anti_margin_9dip" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/icon_settings" 
        android:contentDescription="@null"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:src="@drawable/icon_settings" 
        android:layout_alignParentLeft="true" 
        android:layout_centerVertical="true" />
    <TextView android:textSize="@dimen/anti_textsize_18sp" 
        android:textColor="@color/anti_color_dark_grey" 
        android:id="@+id/text_settings" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="@dimen/anti_margin_11dip" 
        android:text="@string/anti_settings" 
        android:layout_toRightOf="@id/icon_settings" 
        android:layout_centerVertical="true" />
    <ImageView android:id="@+id/icon_arrow" 
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/icon_arrow" 
        android:layout_alignParentRight="true" 
        android:layout_centerVertical="true" />
    <TextView 
        android:id="@+id/block_tip" 
        android:textSize="@dimen/anti_textsize_14sp" 
        android:textColor="@color/anti_color_light_grey" 
        android:ellipsize="marquee" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="8.0dip" 
        android:layout_marginRight="@dimen/anti_margin_19dip" 
        android:text="@string/anti_blocked_list_enable" 
        android:singleLine="true" 
        android:layout_toLeftOf="@id/icon_arrow" 
        android:layout_toRightOf="@id/text_settings" 
        android:layout_centerVertical="true" 
        android:marqueeRepeatLimit="0" />
</RelativeLayout>
